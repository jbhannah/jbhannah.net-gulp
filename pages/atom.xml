---
template: atom.xml
---

{%- for article in site.articles %}
  <entry>
    <title>{{ article.title }}</title>
    <link href="{{ site.baseUrl }}{{ article.permalink }}" />
    <updated>{{ article.date | format() }}</updated>
    <id>{{ site.baseUrl }}{{ article.permalink }}</id>
    <summary type="html">
      {{ article.excerpt | escape }}
      <p><a href="{{ site.baseUrl }}{{ article.permalink }}">Read Moreâ€¦</a></p>
    </summary>
  </entry>
{% endfor -%}
